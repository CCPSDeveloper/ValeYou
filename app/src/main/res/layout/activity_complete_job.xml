<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View"/>

        <variable
            name="check"
            type="boolean" />


        <variable
            name="bean"
            type="com.marius.valeyou_admin.data.beans.jobs.JobDetailModel" />


        <variable
            name="vm"
            type="com.marius.valeyou_admin.ui.fragment.myjob.upcoming.complete.CompleteJobActivityVM" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_gradient_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp150"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp100"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp100"
                    android:rotation="-10"
                    android:layout_marginStart="-50dp"
                    android:layout_marginEnd="-50dp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp10"
                android:layout_marginTop="@dimen/dp80">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10"
                        app:cardCornerRadius="@dimen/dp10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp20">

                                <TextView
                                    style="@style/TextViewStyleSubTitleRegular"
                                    android:text="Payment Method:"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"/>

                                <TextView
                                    style="@style/TextViewStyleSubTitleRegular"
                                    android:padding="@dimen/dp10"
                                    android:textSize="@dimen/sp14"
                                    android:textColor="@color/grey"
                                    android:layout_alignParentEnd="true"
                                    android:text="Credit Card" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp1"
                                android:background="@color/grey_light"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/TextViewStyleSubTitleRegular"
                                    android:text="Sub Total:"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/subTotal"
                                    style="@style/TextViewStyleSubTitleRegular"
                                    android:padding="@dimen/dp10"
                                    android:textSize="@dimen/sp14"
                                    android:text="500"
                                    android:textColor="@color/grey"
                                    android:layout_alignParentEnd="true"
                                   />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp1"
                                android:background="@color/grey_light"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/TextViewStyleSubTitleRegular"
                                    android:text="Processing Fee"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/job_date"
                                    style="@style/TextViewStyleSubTitleRegular"
                                    android:padding="@dimen/dp10"
                                    android:textSize="@dimen/sp14"
                                    android:text="0"
                                    android:textColor="@color/grey"
                                    android:layout_alignParentEnd="true" />

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/dp20"
                        android:fontFamily="@font/sfpro_regular"
                        android:text="Grand Total"/>

                <TextView
                    android:id="@+id/grandTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/black"
                    android:text="500"
                    android:textSize="@dimen/dp15"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:paddingRight="5sp">
                    <TextView
                        android:id="@+id/hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:background="@drawable/blue_stroke"
                        android:padding="7sp"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextBlue"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:textSize="25sp"
                        android:textColor="@color/colorTextBlue"
                        />

                    <TextView
                        android:id="@+id/minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:background="@drawable/blue_stroke"
                        android:padding="7sp"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextBlue"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:paddingTop="7sp"
                        android:paddingBottom="7sp"
                        android:textSize="25sp"
                        android:textColor="@color/colorTextBlue"
                        />

                    <TextView
                        android:id="@+id/seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:background="@drawable/blue_stroke"
                        android:padding="7sp"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextBlue"
                        />

                </LinearLayout>


                <Button
                    android:id="@+id/homeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BACK TO JOBS"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:background="@color/colorPrimary"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginRight="@dimen/dp30"
                    android:layout_marginLeft="@dimen/dp30"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp30"/>



                </LinearLayout>








            <include android:id="@+id/header"
                layout="@layout/toolbar_transparent"
                app:vm="@{vm}"/>
        </RelativeLayout>




        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="180dp"
            android:visibility="@{check?View.VISIBLE:View.GONE}"
            app:SpinKit_Color="?textColorTheme" />






    </FrameLayout>


</layout>