<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="bean"
            type="com.marius.valeyou_admin.data.beans.map.MapListModel" />

        <variable
            name="callback"
            type="com.marius.valeyou_admin.di.base.adapter.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        app:cardCornerRadius="@dimen/dp10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_list_items"
                android:orientation="horizontal"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:onClick="@{v->callback.onItemClick(v,bean)}"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    app:cardCornerRadius="@dimen/dp10"
                    android:layout_margin="@dimen/dp10">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        app:job_image_src='@{bean.orderImages}'/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text='@{bean.title}'
                        android:textColor="@color/black"
                        />

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:textSize="@dimen/sp10"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp5"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:layout_marginBottom="@dimen/dp3"
                        android:textColor="@color/edit_text"
                        android:text="@{bean.description}"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text='@{bean.distance+" "+ "miles Away"}'
                            android:textSize="@dimen/sp10"
                            android:layout_alignParentEnd="true"
                            android:drawableLeft="@drawable/ic_profile_sidemenu_icon"
                            android:drawablePadding="@dimen/dp5"
                            android:textColor="@color/edit_text"
                            android:layout_marginEnd="@dimen/dp10" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <RatingBar
                                android:id="@+id/myRatingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="5"
                                android:theme="@style/RatingBar"
                                android:layout_gravity="center_vertical"
                                android:isIndicator="true" />

                            <TextView
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="5.0 Review"
                                android:textSize="@dimen/sp10"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/edit_text"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/bid_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp5"
                android:gravity="center"
                android:paddingBottom="@dimen/dp5"
                android:paddingStart="@dimen/dp5"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp5"
                android:text='@{bean.bid_price==0?"Place Bid":"Already Placed"}'
                android:paddingEnd="@dimen/dp2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp10"
                android:background='@{bean.bid_price==0?@color/colorPrimary:@color/mustud}' />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>