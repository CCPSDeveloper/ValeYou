<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.marius.valeyou.ui.fragment.myjob.jobdetails.invoice.pyment.carddetails.paymentsuccess.PaymentSuccessActivityVM" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp150"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp100"
                android:rotation="-10"
                android:layout_marginStart="-50dp"
                android:layout_marginEnd="-50dp"
                />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp60"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            app:cardCornerRadius="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp30"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thank_u_icon"/>

                <TextView
                    style="@style/TextViewStyleSubTitleRegular"
                    android:textColor="@color/grey_light"
                    android:padding="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp20"
                    android:gravity="center"
                    android:text="You will notified once the Deer has\naccepted your request!"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_two"
            android:layout_below="@+id/cv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            app:cardCornerRadius="@dimen/dp10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_upcoming_truck"
                    android:layout_margin="@dimen/dp15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Standard Pickup Load"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Standard P/U truck load disposal\nfee option."
                        android:textSize="@dimen/sp12"
                        android:textColor="@color/edit_text"/>

                    <TextView
                        android:layout_marginTop="@dimen/dp10"
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Address:"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Street Number 5 Arizona, USA"
                        android:drawableLeft="@drawable/ic_miles_icon"
                        android:textSize="@dimen/sp12"
                        android:textColor="@color/edit_text"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="23/07/2020,10:20 AM"
                        android:drawableLeft="@drawable/ic_calendar_icon"
                        android:textSize="@dimen/sp12"
                        android:textColor="@color/edit_text"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_my_jobs"
            android:layout_below="@+id/cv_two"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp45"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            style="@style/RectangleButtonStyle"
            android:onClick="@{(v)->vm.onClick(v)}"
            android:text="@string/see_my_jobs"
            android:layout_margin="@dimen/dp20"
            android:textColor="@color/white"
            android:foreground="?selectableItemBackground"
            android:textSize="@dimen/sp14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include android:id="@+id/header"
                layout="@layout/toolbar_layout"
                app:vm="@{vm}"/>

        </LinearLayout>

    </RelativeLayout>

</layout>