<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.marius.valeyou.ui.fragment.more.profile.addportfolio.AddPortfolioActivityVM" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient_view"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include android:id="@+id/header"
                layout="@layout/toolbar_layout"
                app:vm="@{vm}" />
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp200"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp150"
                android:rotation="-10"
                android:layout_marginStart="-50dp"
                android:layout_marginEnd="-50dp"
                />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_top"
            android:layout_marginTop="@dimen/dp40"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            app:cardCornerRadius="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewStyleSubTitleRegular"
                    android:textColor="@color/grey"
                    android:padding="@dimen/dp10"
                    android:text="Add Profile Project"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/divider"/>

                <TextView
                    android:layout_width="match_parent"
                    style="@style/TextViewStyleSubTitleRegular"
                    android:textColor="@color/grey"
                    android:padding="@dimen/dp10"
                    android:text="Project Title"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    app:cardCornerRadius="@dimen/dp10">

                    <EditText
                        android:layout_width="match_parent"
                        style="@style/EditText_Regular"
                        android:textColor="@color/grey"
                        android:padding="@dimen/dp10"
                        android:background="@color/full_transparent"
                        android:hint="Enter Brioef But Descriptive Title"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    style="@style/TextViewStyleSubTitleRegular"
                    android:textColor="@color/grey"
                    android:padding="@dimen/dp10"
                    android:text="Description"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    app:cardCornerRadius="@dimen/dp10">

                    <EditText
                        android:layout_width="match_parent"
                        style="@style/EditText_Regular"
                        android:textColor="@color/grey"
                        android:padding="@dimen/dp10"
                        android:background="@color/full_transparent"
                        android:hint="Enter Your Description"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    style="@style/TextViewStyleSubTitleRegular"
                    android:textColor="@color/grey"
                    android:padding="@dimen/dp10"
                    android:text="Completion Date (Optional)"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    app:cardCornerRadius="@dimen/dp10">

                    <EditText
                        android:layout_width="match_parent"
                        style="@style/EditText_Regular"
                        android:textColor="@color/grey"
                        android:padding="@dimen/dp10"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_calendar_icon"
                        android:background="@color/full_transparent"
                        android:hint="15/06/2020"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    style="@style/TextViewStyleSubTitleRegular"
                    android:textColor="@color/grey"
                    android:padding="@dimen/dp10"
                    android:text="Upload Project Photo"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    app:cardCornerRadius="@dimen/dp10">

                    <EditText
                        android:layout_width="match_parent"
                        style="@style/EditText_Regular"
                        android:textColor="@color/grey"
                        android:padding="@dimen/dp10"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_calendar_icon"
                        android:background="@color/full_transparent"
                        android:hint="Drag and Drop"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>