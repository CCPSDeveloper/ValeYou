<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View"/>

        <variable
            name="check"
            type="boolean" />


        <variable
            name="bean"
            type="com.marius.valeyou_admin.data.beans.jobs.JobDetailModel" />


        <variable
            name="vm"
            type="com.marius.valeyou_admin.ui.fragment.myjob.startjob.StartJobTimerActivityVM" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp150"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp100"
                android:rotation="-10"
                android:layout_marginStart="-50dp"
                android:layout_marginEnd="-50dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_round_corner2"
                    android:padding="@dimen/dp10"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/dp2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/iv_one"
                        android:layout_width="@dimen/dp70"
                        android:layout_height="@dimen/dp70"
                        app:cardCornerRadius="@dimen/dp10"
                        android:visibility="visible"
                        android:layout_margin="@dimen/dp10">
                        <ImageView
                            android:id="@+id/job_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_toRightOf="@id/iv_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:layout_marginTop="2dp"
                                android:text='@{bean.title}'
                                android:textSize="15dp"
                                />

                            <TextView
                                android:layout_below="@+id/iv_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfpro_bold"
                                android:textColor="@color/black"
                                android:layout_marginLeft="@dimen/dp10"
                                android:textSize="18dp"
                                />


                        </LinearLayout>

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:textSize="@dimen/sp12"
                            android:textColor="@color/edit_text"
                            android:layout_marginTop="@dimen/dp5"
                            android:drawableLeft="@drawable/ic_miles_icon"
                            android:drawablePadding="@dimen/dp5"
                            android:text='@{bean.location}' />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="Job Status:"
                                android:textColor="@color/edit_text"/>
                            <TextView
                                android:id="@+id/statusText"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:textColor="@color/green"
                                android:layout_marginStart="@dimen/dp5"/>
                        </LinearLayout>





                    </LinearLayout>

                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_regular"
                android:textColor="@color/colorPrimary"
                android:text="Description"/>

                <TextView
                    android:id="@+id/des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{bean.description}'
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/grey"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/colorPrimary"
                    android:text="Job Price : "/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{bean.endPrice}'
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/colorPrimary"
                    android:text="Bid Price : "/>

                <TextView
                    android:id="@+id/bid_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{bean.bid_price+""}'
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/grey"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Started at : "
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/sfpro_regular"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"/>

            </LinearLayout>




            <Button
                android:id="@+id/btn_end_job"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp30"
                android:background="@color/colorPrimary"
                android:layout_gravity="bottom"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:text="End Job"
                android:textColor="@color/white"
                android:foreground="?selectableItemBackground"
                android:textSize="@dimen/sp14" />

        </LinearLayout>


        <include android:id="@+id/header"
            layout="@layout/toolbar_transparent"
            app:vm="@{vm}"/>
    </RelativeLayout>




        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="180dp"
            android:visibility="@{check?View.VISIBLE:View.GONE}"
            app:SpinKit_Color="?textColorTheme" />






</FrameLayout>


</layout>