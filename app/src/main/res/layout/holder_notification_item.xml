<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bean"
            type="com.marius.valeyou_admin.data.beans.notification.NotificationModel" />
        <variable
            name="callback"
            type="com.marius.valeyou_admin.di.base.adapter.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_read"
            style="@style/TextViewStyleSubTitleRegular"
            android:text="Mark as read"
            android:visibility="gone"

            android:layout_alignParentEnd="true"
            android:padding="@dimen/dp10"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_items"
            android:layout_below="@+id/tv_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:onClick="@{v->callback.onItemClick(v,bean)}"
            android:layout_marginBottom="@dimen/dp5">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    app:cardCornerRadius="@dimen/dp30"
                    android:layout_margin="@dimen/dp10">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:profile_src='@{"http://3.17.254.50:4999/upload/"+bean.userImage}'
                        android:backgroundTint="@color/grey_light"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp5"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingEnd="@dimen/dp10">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:textColor="@color/black"
                        android:text='@{bean.type == 1?"Accepted":"Completed"}'
                        />
                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text='@{bean.message}'
                        android:textColor="@color/grey"
                        android:textSize="@dimen/sp12"
                        />

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="2 Day Ago"
                        android:visibility="gone"
                        android:textColor="@color/edit_text"
                        android:layout_marginTop="@dimen/dp10"
                        android:textSize="@dimen/sp12"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>