<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View"/>

        <variable
            name="check"
            type="boolean" />

        <variable
            name="profile"
            type="com.marius.valeyou_admin.data.beans.profilebean.ProfileModel" />


        <variable
            name="vm"
            type="com.marius.valeyou_admin.ui.activity.dashboard.profile.ProfileActivityVM" />


    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient_view"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp300"
            android:scaleType="centerCrop"
            app:image_url="@{profile.image}"
            />
        <FrameLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include android:id="@+id/header"
                layout="@layout/toolbar_transparent"
                app:vm="@{vm}" />
        </FrameLayout>

        <RelativeLayout
            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp200"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp150"
                android:rotation="-10"
                android:layout_marginStart="-50dp"
                android:layout_marginEnd="-50dp"
                />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_top"
            android:layout_marginTop="@dimen/dp40"
            android:visibility="visible"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="-10dp"
            app:cardCornerRadius="@dimen/dp10">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Large.ThreeBounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="150dp"
                android:visibility="@{check?View.VISIBLE:View.GONE}"
                app:SpinKit_Color="?textColorTheme" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp15">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="Name"
                            android:textColor="@color/edit_text"
                            />

                        <TextView
                            android:id="@+id/txt_fullName"
                            style="@style/TextViewStyleSubTitleRegular"
                            android:textColor="@color/edit_text"
                            android:text='@{profile.firstName+" "+profile.lastName}'
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp15">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="Email"
                            android:textColor="@color/edit_text"
                            />

                        <TextView
                            android:id="@+id/txt_email"
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text='@{profile.email}'
                            android:textColor="@color/edit_text"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp15">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="Phone Number"
                            android:textColor="@color/edit_text"
                            />

                        <TextView
                            android:id="@+id/txt_phone"
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text='@{profile.phone}'
                            android:textColor="@color/edit_text"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp15">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="Date Of Birth"
                            android:textColor="@color/edit_text"
                            />

                        <TextView
                            android:id="@+id/txt_age"
                            style="@style/TextViewStyleSubTitleRegular"
                            android:textColor="@color/edit_text"
                            android:text='@{profile.dob}'
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp15">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="Address"
                            android:textColor="@color/edit_text"
                            />

                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text='@{profile.houseNumber+" "+profile.appartment+" "+profile.street}'
                            android:textAlignment="textEnd"
                            android:textColor="@color/edit_text"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp15">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="City"
                            android:textColor="@color/edit_text"
                            />

                        <TextView
                            android:id="@+id/txt_city"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text='@{profile.city}'
                            android:textAlignment="textEnd"
                            android:textColor="@color/edit_text"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp15">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="State"
                            android:textColor="@color/edit_text"
                            />

                        <TextView
                            android:id="@+id/txt_state"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text='@{profile.state}'
                            android:textAlignment="textEnd"
                            android:textColor="@color/edit_text"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp15">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="Zip Code"
                            android:textColor="@color/edit_text"
                            />

                        <TextView
                            android:id="@+id/txt_zip_code"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text='@{profile.zipCode}'
                            android:textAlignment="textEnd"
                            android:textColor="@color/edit_text"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp15">

                        <TextView
                            android:layout_width="@dimen/dp100"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:fontFamily="@font/sfpro_regular"
                            android:textColor="@color/edit_text"
                            />

                        <TextView
                            android:id="@+id/txt_category"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:fontFamily="@font/sfpro_regular"
                            android:layout_height="wrap_content"
                            android:textColor="@color/edit_text"
                            android:layout_alignParentEnd="true"
                            />



                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp15">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="Description" />

                        <TextView
                            android:id="@+id/txt_desc"
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text='@{profile.description}'
                            android:textColor="@color/edit_text"
                            android:layout_marginTop="@dimen/dp7"
                            android:textSize="@dimen/sp12"
                            />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_languages"
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="@string/languages"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/IMG_add_languages"
                                    android:layout_width="@dimen/dp24"
                                    android:layout_height="@dimen/dp24"
                                    android:src="@drawable/ic_add_icon"
                                    android:layout_gravity="end"
                                    android:onClick="@{v->vm.onClick(v)}"
                                    android:background="@drawable/circle_black"
                                    android:padding="@dimen/dp2"
                                    android:backgroundTint="?textColorTheme"
                                    android:layout_marginEnd="@dimen/dp10"/>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_language"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp5"
                                    android:overScrollMode="never"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_Education"
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="@string/education"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/IMG_add_education"
                                    android:layout_width="@dimen/dp24"
                                    android:layout_height="@dimen/dp24"
                                    android:src="@drawable/ic_add_icon"
                                    android:layout_gravity="end"
                                    android:onClick="@{v->vm.onClick(v)}"
                                    android:background="@drawable/circle_black"
                                    android:padding="@dimen/dp2"
                                    android:backgroundTint="?textColorTheme"
                                    android:layout_marginEnd="@dimen/dp10"/>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_education"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp5"
                                    android:overScrollMode="never"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_experience"
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="@string/experience"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/IMG_add_experience"
                                    android:layout_width="@dimen/dp24"
                                    android:layout_height="@dimen/dp24"
                                    android:src="@drawable/ic_add_icon"
                                    android:layout_gravity="end"
                                    android:onClick="@{v->vm.onClick(v)}"
                                    android:background="@drawable/circle_black"
                                    android:padding="@dimen/dp2"
                                    android:backgroundTint="?textColorTheme"
                                    android:layout_marginEnd="@dimen/dp10"/>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_experience"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp5"
                                    android:overScrollMode="never"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_portfolio"
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="@string/portfolio"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/IMG_add_portfolio"
                                android:layout_width="@dimen/dp24"
                                android:layout_height="@dimen/dp24"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:src="@drawable/ic_add_icon"
                                android:layout_gravity="end"
                                android:background="@drawable/circle_black"
                                android:padding="@dimen/dp2"
                                android:backgroundTint="?textColorTheme"
                                android:layout_marginEnd="@dimen/dp10"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_portfolio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp5"
                                android:overScrollMode="never"/>
                        </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_services"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="@string/my_services"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/IMG_add_services"
                                android:layout_width="@dimen/dp24"
                                android:layout_height="@dimen/dp24"
                                android:src="@drawable/ic_add_icon"
                                android:layout_gravity="end"
                                android:background="@drawable/circle_black"
                                android:padding="@dimen/dp2"
                                android:backgroundTint="?textColorTheme"
                                android:layout_marginEnd="@dimen/dp10"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_services"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp5"
                                android:overScrollMode="never"/>
                        </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_business_hours"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="Business Hours"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/IMG_business_hours"
                                android:layout_width="@dimen/dp24"
                                android:layout_height="@dimen/dp24"
                                android:src="@drawable/ic_add_icon"
                                android:layout_gravity="end"
                                android:background="@drawable/circle_black"
                                android:padding="@dimen/dp2"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:backgroundTint="?textColorTheme"
                                android:layout_marginEnd="@dimen/dp10"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_business_hour"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp5"
                                android:overScrollMode="never"/>
                        </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_identity"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="Identity Verification"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/IMG_add_identity"
                                android:layout_width="@dimen/dp24"
                                android:layout_height="@dimen/dp24"
                                android:src="@drawable/ic_add_icon"
                                android:layout_gravity="end"
                                android:background="@drawable/circle_black"
                                android:padding="@dimen/dp2"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:backgroundTint="?textColorTheme"
                                android:layout_marginEnd="@dimen/dp10"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_identity_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp5"
                                android:overScrollMode="never"/>
                        </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_certificates"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="Certificates &amp; Awards"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/IMG_add_certificate"
                                android:layout_width="@dimen/dp24"
                                android:layout_height="@dimen/dp24"
                                android:src="@drawable/ic_add_icon"
                                android:layout_gravity="end"
                                android:background="@drawable/circle_black"
                                android:padding="@dimen/dp2"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:backgroundTint="?textColorTheme"
                                android:layout_marginEnd="@dimen/dp10"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_certificate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp5"
                                android:overScrollMode="never"/>
                        </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_reviews"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="Reviews"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/IMG_add_reviews"
                                android:layout_width="@dimen/dp24"
                                android:layout_height="@dimen/dp24"
                                android:src="@drawable/ic_add_icon"
                                android:layout_gravity="end"
                                android:background="@drawable/circle_black"
                                android:padding="@dimen/dp2"
                                android:backgroundTint="?textColorTheme"
                                android:layout_marginEnd="@dimen/dp10"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_reviews"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp5"
                                android:overScrollMode="never"/>
                        </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_deactivate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?selectableItemBackground"
                        android:onClick="@{v->vm.onClick(v)}"
                        android:layout_marginBottom="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="Deactivate Account"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?selectableItemBackground"
                        android:onClick="@{v->vm.onClick(v)}"
                        android:layout_marginBottom="@dimen/dp20">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                style="@style/TextViewStyleSubTitleRegular"
                                android:text="Delete Account"
                                android:drawableRight="@drawable/ic_arrow_down"
                                android:paddingTop="@dimen/dp15"
                                android:paddingBottom="@dimen/dp15"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:textColor="@color/grey"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>
