<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View"/>

        <variable
            name="check"
            type="boolean" />

        <variable
            name="bean"
            type="com.marius.valeyou_admin.data.beans.jobs.JobDetailModel" />


        <variable
            name="vm"
            type="com.marius.valeyou_admin.ui.fragment.myjob.upcoming.opendetails.CurrentJobDetailsActivityVM" />
    </data>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp150"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp100"
                android:rotation="-10"
                android:layout_marginStart="-50dp"
                android:layout_marginEnd="-50dp"
                />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp60"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            app:cardCornerRadius="@dimen/dp10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp10"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="Job Title:"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"/>

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:padding="@dimen/dp10"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/grey"
                            android:layout_alignParentEnd="true"
                            android:text='@{bean.title}' />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="Location:"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"/>

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:padding="@dimen/dp10"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/grey"
                            android:layout_alignParentEnd="true"
                            android:text='@{bean.location}' />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/grey_light"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/TextViewStyleSubTitleRegular"
                            android:text="Date &amp; Time"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/job_date"
                            style="@style/TextViewStyleSubTitleRegular"
                            android:padding="@dimen/dp10"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/grey"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Description:"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text='@{bean.description}'
                        android:layout_centerVertical="true"
                        android:textColor="@color/edit_text"/>

                </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_one"
            style="@style/TextViewStyleSubTitleRegular"
            android:padding="@dimen/dp10"
            android:textSize="@dimen/sp14"
            android:textColor="@color/colorPrimary"
            android:text="Payment Information"
            android:layout_below="@+id/cv_top"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_below="@+id/tv_one"
            app:cardCornerRadius="@dimen/dp10"
            android:id="@+id/cv_two">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Price"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text='@{bean.bid_price + " brl"}' />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Service Fee"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="0 brl" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Tip"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="0 brl" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="SUBTOTAL"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text='@{bean.bid_price + " brl"}'  />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@+id/cv_two">

            <Button
                android:id="@+id/btn_start_end_job"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_gravity="center_vertical"
                style="@style/RectangleButtonStyle"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:text="Start Job"
                android:layout_marginTop="@dimen/dp10"
                android:layout_margin="@dimen/dp10"
                android:textColor="@color/white"
                android:foreground="?selectableItemBackground"
                android:textSize="@dimen/sp14" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp45"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                style="@style/RectangleButtonStyle"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:text="Chat"
                android:visibility="gone"
                android:layout_margin="@dimen/dp10"
                android:background="@drawable/back_round_corner7"
                android:backgroundTint="?textColorTheme"
                android:foreground="?selectableItemBackground"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

        <include android:id="@+id/header"
            layout="@layout/toolbar_transparent"
            app:vm="@{vm}"/>

    </RelativeLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="150dp"
            android:visibility="@{check?View.VISIBLE:View.GONE}"
            app:SpinKit_Color="?textColorTheme" />

    </FrameLayout>
</layout>