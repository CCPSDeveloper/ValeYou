<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View"/>

        <variable
            name="check"
            type="boolean" />


        <variable
            name="vm"
            type="com.marius.valeyou_admin.ui.activity.signup.signuptwo.selectcategory.SelectCategoryActivityVM" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp170"
            android:src="@drawable/login_top_icon"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/ll_login"
            android:layout_marginTop="@dimen/dp60"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:background="@drawable/back_round_corner4"
            android:padding="@dimen/dp10">

            <LinearLayout
                android:id="@+id/ll_top_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_margin="@dimen/dp10"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/remoteRB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Remote Jobs"
                        android:textSize="@dimen/sp12"
                        android:fontFamily="@font/sfpro_regular"
                        android:textColor="@color/grey"
                        android:buttonTint="?textColorTheme"/>

                    <RadioButton
                        android:id="@+id/localRB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Local Jobs"
                        android:textSize="@dimen/sp12"
                        android:fontFamily="@font/sfpro_regular"
                        android:textColor="@color/grey"
                        android:buttonTint="?textColorTheme"/>

                </RadioGroup>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_tab"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dp5"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:elevation="@dimen/dp5">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        style="@style/EditText_Regular"
                        android:background="@drawable/edit_white_solid"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/places_ic_search"
                        android:paddingStart="@dimen/dp10"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/dp10"
                        android:hint="What are you looking for?"
                        android:textSize="@dimen/sp14" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category"
                android:layout_below="@+id/ll_top_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:layout_above="@+id/btn_next"
                android:scrollbars="none"/>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center_vertical"
                style="@style/RectangleButtonStyle"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:text="@string/next"
                android:layout_margin="@dimen/dp10"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:foreground="?selectableItemBackground"
                android:textSize="@dimen/sp14" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include android:id="@+id/header"
                layout="@layout/toolbar_layout"
                app:vm="@{vm}"/>
        </LinearLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{check?View.VISIBLE:View.GONE}"
            app:SpinKit_Color="?textColorTheme" />


    </RelativeLayout>
</layout>